              todir="${tomcat_tsm_deploy_dir}"
              failonerror="true" />
    </target>

    <target name="service1 clean" description="service1 clean">
        <exec executable="cmd" dir="${service1_project_dir}">
            <arg value="/c"/>
            <arg value="call"/>
            <arg value="mvn"/>
            <arg value="-DskipTests=true"/>
            <arg value="clean"/>
        </exec>
    </target>
	
